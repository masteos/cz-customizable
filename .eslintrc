{
  "extends": ["airbnb-base"],
  "env": {
    "node": true,
    "jasmine": true
  },
  "globals": {
    "console": true,
    "jest": true,
    "module": true
  },
  "rules": {
    "arrow-body-style": ["error", "always"],
    "curly": "error",
    "implicit-arrow-linebreak": ["error", "below"],
    "arrow-spacing": "error",
    "arrow-parens": ["error", "always"],
    "brace-style": ["error", "1tbs", { "allowSingleLine": false }],
    "max-len": ["error", {
      "code": 120,
      "ignoreStrings": true,
      "ignoreComments": true
    }],
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "never"]
  }
}
