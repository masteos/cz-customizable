{
  "extends": ["airbnb-base"],
  "env": {
    "node": true,
    "jasmine": true
  },
  "globals": {
    "console": true,
    "jest": true,
    "module": true
  },
  "plugins": ["prettier"],
  "rules": {
    "arrow-body-style": ["error", "always"],
    "max-len": ["error", {
      "code": 120,
      "ignoreStrings": true,
      "ignoreComments": true
    }],
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "never"]
  }
}
